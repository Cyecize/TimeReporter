{% extends '../base-layout.twig' %}

{% block body %}
    <div class="mr-auto mt-2 pt-3">
        <h3>New Project
            <small>( Owned by {{ user.username }} )</small>
        </h3>
        <form method="post">
            <div class="form-group">
                <label for="projectName">Project Name</label>
                <input value="{{ model.projectName }}" type="text" id="projectName" name="projectName"
                       class="form-control"
                       required placeholder="Max 30 characters">
                {% embed '../field-err.twig' with {fieldName: 'projectName'} %} {% endembed %}
            </div>

            <div class="form-group">
                <label for="startDate">Project Start Date</label>
                <input value="{{ model.startDate }}" type="text" id="startDate" name="startDate"
                       class="form-control date-time-picker" required placeholder="The starting date of the project">
                {% embed '../field-err.twig' with {fieldName: 'startDate'} %} {% endembed %}
            </div>

            <div class="form-group">
                <label for="endDate">Project End Date
                    <small>( if applicable )</small>
                </label>
                <input value="{{ model.endDate }}" type="text" id="endDate" name="endDate"
                       class="form-control date-time-picker" placeholder="Not required">
                {% embed '../field-err.twig' with {fieldName: 'endDate'} %} {% endembed %}
            </div>

            <div class="form-group text-right">
                <button class="btn btn-info">
                    Create
                </button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/static/js/date-picker.js"></script>
    <script>
        $(function () {
            DatePickerPresets.datePickerFromToday(new DatePicker('.date-time-picker'));
        });
    </script>
{% endblock %}