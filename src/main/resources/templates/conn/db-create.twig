{% extends '../base-layout.twig' %}

{% block body %}
    <div class="mr-auto mt-2 pt-3">
        <h3>New Database</h3>
        <form method="post" id="formDbCreation">
            <div class="form-group">
                <label for="databaseName">Database Name</label>
                <input value="{{ model.databaseName }}" type="text" id="databaseName" name="databaseName"
                       class="form-control"
                       required placeholder="db_example_name">
                {% embed '../field-err.twig' with {fieldName: 'databaseName'} %} {% endembed %}
            </div>

            <h5 class="m-0 p-0">Admin Details</h5>
            <div class="form-group">
                <label for="username">Username</label>
                <input value="{{ model.adminUsername }}" type="text" id="username" name="adminUsername"
                       placeholder="John123"
                       class="form-control" required>
                {% embed '../field-err.twig' with {fieldName: 'adminUsername'} %} {% endembed %}
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="adminPassword" placeholder="******" class="form-control"
                       required>
                {% embed '../field-err.twig' with {fieldName: 'adminPassword'} %} {% endembed %}
            </div>

            <div class="form-group">
                <label for="passwordConfirm">Confirm Password</label>
                <input type="password" id="passwordConfirm" name="passwordConfirm" placeholder="******"
                       class="form-control" required>
                {% embed '../field-err.twig' with {fieldName: 'passwordConfirm'} %} {% endembed %}
            </div>

            <div class="form-group text-right">
                <a href="{{ path('/database/select') }}" class="btn btn-dark">
                    Back
                </a>
                <button class="btn btn-info" id="btnCreate">
                    Create
                </button>
            </div>
        </form>
    </div>
{% endblock %}
