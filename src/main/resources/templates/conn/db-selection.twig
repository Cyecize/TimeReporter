{% extends '../base-layout.twig' %}

{% block body %}
    <div class="mr-auto mt-2 pt-3">
        <h3>Select Database</h3>

        <form method="post">
            <div class="form-group">
                <label for="dbName">Database Name</label>
                <select name="databaseName" id="dbName" required class="form-control selectize">
                    {% for dbName in dbNames %}
                        <option value="{{ dbName }}">{{ dbName }}</option>
                    {% endfor %}
                </select>
                {% embed '../field-err.twig' with {fieldName: 'databaseName'} %} {% endembed %}
            </div>

            <div class="form-group text-right">
                <a href="{{ path('/database/connect') }}" class="btn btn-dark">
                    Change Connection
                </a>
                <a href="{{ path('/database/create') }}" class="btn btn-dark">
                    New Database
                </a>
                <button type="submit" class="btn btn-info">
                    Choose
                </button>
            </div>
        </form>
    </div>

{% endblock %}